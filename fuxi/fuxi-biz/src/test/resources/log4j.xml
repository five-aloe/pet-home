<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5p [%c:%L] -%m%n" />
		</layout>
	</appender>



	<!-- spring -->
	<logger name="org.springframework.beans.factory.support.AbstractBeanFactory"
		additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<logger name="org.springframework.web" additivity="false">
		<level value="DEBUG"></level>
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- spring -->
	<logger name="org.springframework" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- mybatis-spring -->
	<logger name="org.mybatis.spring" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- mybatis -->
	<logger name="org.apache.ibatis.io" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- sql语句打印开关 -->
	<logger name="org.apache.ibatis.logging.jdbc.BaseJdbcLogger" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- apache commons -->
	<logger name="org.apache.commons" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<!-- http client 的字节码日志 -->
	<logger name="org.apache.http" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<logger name="org.apache.zookeeper" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"	/>	
	</logger>

	<logger name="com.alibaba.dubbo" additivity="false">
		<level value="INFO" />
		<appender-ref ref="CONSOLE"	/>	
	</logger>
	
	<!-- ===================================================================== -->
	<!-- Root logger -->
	<!-- ===================================================================== -->

	<root>
		<level value="INFO" />
		<appender-ref ref="CONSOLE" />
	</root>

</log4j:configuration> 