<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhonglian.fuxi.dal.mapper.FundAccountMapper">

	<resultMap id="ListMap" type="Account"></resultMap>

	<resultMap id="DetailMap" type="Account" extends="ListMap"></resultMap>
	
	
	<!-- 统计数量 -->
	<select id="findPageCount" resultType="int">
		SELECT
			COUNT(ac.id)
		FROM
			account ac
		LEFT JOIN `user` u ON ac.userId = u.id
		<where>
			<if test="beginDate != null">AND ac.createDate>=#{beginDate}</if>
			<if test="endDate != null">AND #{endDate}>=ac.createDate</if>
			<if test="mobile != null and mobile !=''">AND u.mobile like concat('%',#{mobile},'%')</if>
			<if test="accountNo != null and accountNo !=''">AND ac.no like concat('%',#{accountNo},'%')</if>
			<if test="name != null and name != ''">AND u.`name`like concat('%',#{name},'%')</if>
			<if test="type != null">AND ac.type =#{type}</if>
			<if test="role != null">AND ac.role =#{role}</if>
			<if test="state != null">AND ac.state =#{state}</if>
			<if test="source != null and source != ''">AND ac.source like concat('%',#{source},'%')</if>
		</where>
	</select>
	
	<!-- 分页查询 -->
	<select id="findPage" resultType="com.zhonglian.douxin.common.bo.FundAccountBo">
		SELECT
			ac.*,u.`name`,u.mobile
		FROM
			account ac
		LEFT JOIN `user` u ON ac.userId = u.id
		<where>
			<if test="beginDate != null">AND ac.createDate>=#{beginDate}</if>
			<if test="endDate != null">AND #{endDate}>=ac.createDate</if>
			<if test="mobile != null and mobile !=''">AND u.mobile like concat('%',#{mobile},'%')</if>
			<if test="accountNo != null and accountNo !=''">AND ac.no like concat('%',#{accountNo},'%')</if>
			<if test="name != null and name != ''">AND u.`name`like concat('%',#{name},'%')</if>
			<if test="type != null">AND ac.type =#{type}</if>
			<if test="role != null">AND ac.role =#{role}</if>
			<if test="source != null and source != ''">AND ac.source like concat('%',#{source},'%')</if>
		</where>
		ORDER BY ac.createDate DESC
		LIMIT #{firstResult},#{maxResults}
	</select>
	
	<!-- 统计关注数量 -->
	<select id="findAttentionPageCount" resultType="int">
		SELECT
			COUNT(ac.id)
		FROM
			account ac
		LEFT JOIN `user` u ON ac.userId = u.id
		LEFT JOIN sys_user_attention sua ON ac.id = sua.accountId
		<where>
			<if test="param.beginDate != null">AND ac.createDate>=#{param.beginDate}</if>
			<if test="param.endDate != null">AND #{param.endDate}>=ac.createDate</if>
			<if test="param.mobile != null and param.mobile !=''">AND u.mobile like concat('%',#{param.mobile},'%')</if>
			<if test="param.accountNo != null and param.accountNo !=''">AND ac.no like concat('%',#{param.accountNo},'%')</if>
			<if test="param.name != null and param.name != ''">AND u.`name`like concat('%',#{param.name},'%')</if>
			<if test="param.type != null">AND ac.type =#{param.type}</if>
			<if test="param.role != null">AND ac.role =#{param.role}</if>
			<if test="param.source != null and param.source != ''">AND ac.source like concat('%',#{param.source},'%')</if>
			<if test="id != null and id != ''">AND sua.sysUserId=#{id}</if>
		</where>
	</select>
	
	<!-- 关注分页查询 -->
	<select id="findAttentionPage" resultType="com.zhonglian.douxin.common.bo.FundAccountBo">
		SELECT
			ac.*,u.`name`,u.mobile
		FROM
			account ac
		LEFT JOIN `user` u ON ac.userId = u.id
		LEFT JOIN sys_user_attention sua ON ac.id = sua.accountId
		<where>
			<if test="param.beginDate != null">AND ac.createDate>=#{param.beginDate}</if>
			<if test="param.endDate != null">AND #{param.endDate}>=ac.createDate</if>
			<if test="param.mobile != null and param.mobile !=''">AND u.mobile like concat('%',#{param.mobile},'%')</if>
			<if test="param.accountNo != null and param.accountNo !=''">AND ac.no like concat('%',#{param.accountNo},'%')</if>
			<if test="param.name != null and param.name != ''">AND u.`name`like concat('%',#{param.name},'%')</if>
			<if test="param.type != null">AND ac.type =#{param.type}</if>
			<if test="param.role != null">AND ac.role =#{param.role}</if>
			<if test="param.source != null and param.source != ''">AND ac.source like concat('%',#{param.source},'%')</if>
			<if test="id != null and id != ''">AND sua.sysUserId=#{id}</if>
		</where>
		ORDER BY ac.createDate DESC
		LIMIT #{param.firstResult},#{param.maxResults}
	</select>
	

</mapper>